<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("views.shared.mic_form.text") %>
  </div>
  <%= f.submit t("views.shared.mic_form.post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>

<%= javascript_pack_tag "custom" %>
